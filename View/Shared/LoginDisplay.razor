<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage">Hello, @context.User.Identity?.Name!</MudLink>
        <form method="post" action="Identity/Account/LogOut">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Outlined" Color="Color.Error">Log out</MudButton>
        </form>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="Identity/Account/Register">Register</MudLink>
        <span class="mx-3">/</span>
        <MudLink Href="Identity/Account/Login">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>